<!DOCTYPE html>
<div class="container px-5 px-sm-0">
    <div class = "row">
  <div class="col-md-3">
    <h1>Users info</h1>
    <h3 class="profile-name"></h3>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
      <tr>
        <th>name</th>
         <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
      </table>
  <script src="https://kit.fontawesome.com/b88cbfadf5.js" crossorigin="anonymous"></script>
  <li class="nav-item">
    <%= link_to edit_user_path(current_user.id) ,class:"btn btn-info btn-sm btn-block md-3" do  %>
    <i class="fas fa-users"></i>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </li>
    <h3>New book</h3>
    <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book', class:"btn btn-success"%>
<% end %>  
  </div>
  <!--<div class="col-md-3">-->
    
  <!--</div>-->
  <div class="col-md-8 offset-md-1">
  <h5>Users</h5>
  <table class="table table-hover table-inverse">
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(80,80) %>
        </td>
        <td> <%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
 </div> 
 </div>
</div>

